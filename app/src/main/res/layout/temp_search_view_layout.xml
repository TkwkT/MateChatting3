<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#000000">

	<androidx.constraintlayout.widget.ConstraintLayout
		app:layout_constraintTop_toBottomOf="@id/mile_list_toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:background="@drawable/shape_circle_corner">

		<EditText
			android:id="@+id/search_view_edittext_left"
			android:layout_width="match_parent"
			android:layout_height="34dp"
			android:paddingLeft="11dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginLeft="11dp"
			android:layout_marginRight="40dp"
			android:background="@null"
			android:textCursorDrawable="@drawable/shape_edittext_cursor"
			android:hint="请输入您的关键字"
			android:textColorHint="@color/text_8a8a8a"
			android:textSize="11sp"
			tools:ignore="SmallSp"
			android:imeOptions="normal"
			android:paddingStart="11dp"
			android:visibility="gone"
			android:lines="1"
			android:drawableRight="@drawable/ic_edittext_clean"
			android:drawableEnd="@drawable/ic_edittext_clean"/>

		<!--<EditText-->
		<!--android:id="@+id/search_view_edittext_right"-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="34dp"-->
		<!--android:paddingLeft="11dp"-->
		<!--app:layout_constraintTop_toTopOf="parent"-->
		<!--android:layout_marginLeft="18dp"-->
		<!--android:layout_marginRight="11dp"-->
		<!--android:background="@null"-->
		<!--android:textCursorDrawable="@drawable/shape_edittext_cursor"-->
		<!--android:hint="请输入您的关键字"-->
		<!--android:textColorHint="@color/text_search_color"-->
		<!--android:textSize="11sp"-->
		<!--tools:ignore="SmallSp"-->
		<!--android:imeOptions="actionSearch"-->
		<!--android:paddingStart="11dp"-->
		<!--android:visibility="visible"-->
		<!--android:drawableRight="@drawable/ic_edittext_clean"-->
		<!--android:drawableEnd="@drawable/ic_edittext_clean"-->
		<!--android:singleLine="true"/>-->

		<Button
			android:id="@+id/search_view_button_search"
			android:layout_width="match_parent"
			android:layout_height="34dp"
			app:layout_constraintTop_toTopOf="parent"
			android:background="@drawable/shape_circle_corner"
			style="?android:attr/borderlessButtonStyle"
			android:text="请输入您的关键字"
			android:textSize="11sp"
			tools:ignore="SmallSp"
			android:textColor="@color/text_8a8a8a"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/search_view_image_right"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:src="@drawable/ic_search"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginRight="14dp"
			android:layout_marginEnd="14dp"/>

		<ImageView
			android:id="@+id/search_view_image_left"
			android:layout_width="13dp"
			android:layout_height="13dp"
			android:src="@drawable/ic_search"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>